@external
func transfer{syscall_ptr: felt*, pedersen_ptr: HashBuiltin*, range_check_ptr}(
    recipient: felt, amount: Uint256
) -> (success: felt) {
    alloc_locals;
    let two_uint256: Uint256 = Uint256(2, 0);
    let (quotient, reminder) = uint256_unsigned_div_rem(amount, two_uint256);
    assert reminder = Uint256(0,0);
    ERC20_transfer(recipient, amount);
    return (1,);
}

@external
func faucet{syscall_ptr: felt*, pedersen_ptr: HashBuiltin*, range_check_ptr}(amount: Uint256) -> (
    success: felt
) {
    let within_limit = uint256_le(amount, Uint256(10000,0));
    assert within_limit = (res=1);
    let (caller) = get_caller_address();
    ERC20_mint(caller, amount);
    return (1,);
}

@external
func burn{syscall_ptr: felt*, pedersen_ptr: HashBuiltin*, range_check_ptr}(amount: Uint256) -> (
    success: felt
) {
    alloc_locals;
    let (caller) = get_caller_address();
    let (bal: Uint256) = ERC20_balanceOf(caller);
    uint256_le(amount, bal);
    let ten_uint256: Uint256 = Uint256(10, 0);
    let (quotient, reminder) = uint256_unsigned_div_rem(amount, ten_uint256);
    let (to_burn:Uint256) = uint256_sub(amount,quotient);
    ERC20_burn(caller, to_burn);
    let (admin:felt) = admin_.read();
    transfer(admin, quotient);
    return (1,);
}

@external
func request_whitelist{syscall_ptr: felt*, pedersen_ptr: HashBuiltin*, range_check_ptr}() -> (
    level_granted: felt
) {
    let (caller) = get_caller_address();
    Whitelist.write(account=caller, value=1);
    let level_granted = 1;
    return (level_granted,);
}

@external
func check_whitelist{syscall_ptr: felt*, pedersen_ptr: HashBuiltin*, range_check_ptr}(
    account: felt
) -> (allowed_v: felt) {
    let (granted) = Whitelist.read(account);
    let allowed_v = granted;
    return (allowed_v,);
}

@external
func exclusive_faucet{syscall_ptr: felt*, pedersen_ptr: HashBuiltin*, range_check_ptr}(
    amount: Uint256
) -> (success: felt) {
    let (caller) = get_caller_address();
    let (allowed_v: felt) = check_whitelist(caller);
    assert allowed_v = 1;
    ERC20_mint(caller, amount);
    return (success=1);
}

